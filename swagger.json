basePath: /api
definitions:
  backend.APIResponse:
    properties:
      data: {}
      error:
        type: string
      message:
        type: string
      success:
        type: boolean
    type: object
  backend.PaginationResponse:
    properties:
      data: {}
      hasMore:
        type: boolean
      limit:
        type: integer
      offset:
        type: integer
      total:
        type: integer
    type: object
  backend.SweepAggregatedData:
    properties:
      end_time:
        type: string
      failed_sweeps:
        type: integer
      period:
        type: string
      start_time:
        type: string
      success_rate:
        type: number
      successful_sweeps:
        type: integer
      total_big_odd_ask_value:
        type: number
      total_post_order_value:
        type: number
      total_sweeps:
        type: integer
    type: object
host: localhost: 8080
info:
  contact:
    email: support@swagger.io
    name: API Support
    url: http: //www.swagger.io/support
  description: Poly-Agent Backend API for managing trades, markets, sweeps, and positions
  license:
    name: Apache 2.0
    url: http: //www.apache.org/licenses/LICENSE-2.0.html
  termsOfService: http: //swagger.io/terms/
  title: Poly-Agent API
  version: "1.0"
paths:
  /sweeps:
    get:
      consumes:
      - application/json
      description: Get paginated list of all sweeps with filtering, sorting, count
        and pagination info, including joined market data
      parameters:
      - default: 50
        description: Number of results to return
        in: query
        name: limit
        type: integer
      - default: 0
        description: Number of results to skip
        in: query
        name: offset
        type: integer
      - description: Filter by market slug (partial match)
        in: query
        name: market_slug
        type: string
      - description: Filter by market question (partial match)
        in: query
        name: market_question
        type: string
      - description: Filter by market type
        in: query
        name: market_type
        type: string
      - default: created_at
        description: Sort by field
        enum:
        - created_at
        - post_order_value
        in: query
        name: sort_field
        type: string
      - default: desc
        description: Sort direction
        enum:
        - asc
        - desc
        in: query
        name: sort_direction
        type: string
      produces:
      - application/json
      responses: "200":
          description: Paginated sweeps response with market data
          schema:
            $ref: '#/definitions/backend.PaginationResponse'
        "500":
          description: Internal server error
          schema:
            $ref: '#/definitions/backend.APIResponse'
      summary: Get all sweeps with market data
      tags:
      - sweeps
  /sweeps/aggregated:
    get:
      consumes:
      - application/json
      description: Get aggregated sweep statistics for different time periods with
        optional market type filtering
      parameters:
      - default: all
        description: Time period for aggregation
        enum:
        - 1d
        - 3d
        - 7d
        - 1m
        - all
        in: query
        name: period
        type: string
      - description: Filter by market type
        in: query
        name: market_type
        type: string
      produces:
      - application/json
      responses: "200":
          description: Aggregated sweep data
          schema:
            $ref: '#/definitions/backend.SweepAggregatedData'
        "400":
          description: Bad request
          schema:
            $ref: '#/definitions/backend.APIResponse'
        "500":
          description: Internal server error
          schema:
            $ref: '#/definitions/backend.APIResponse'
      summary: Get aggregated sweep data
      tags:
      - sweeps
  /sweeps/daily-metrics:
    get:
      consumes:
      - application/json
      description: Get daily aggregated trading metrics showing performance by date
      parameters:
      - default: 30
        description: Number of days to return
        in: query
        name: limit
        type: integer
      - default: 0
        description: Number of days to skip
        in: query
        name: offset
        type: integer
      produces:
      - application/json
      responses: "200":
          description: Paginated daily trading metrics
          schema:
            $ref: '#/definitions/backend.PaginationResponse'
        "500":
          description: Internal server error
          schema:
            $ref: '#/definitions/backend.APIResponse'
      summary: Get daily trading metrics
      tags:
      - sweeps
schemes:
- http
swagger: "2.0"