{
    "schemes": [
        "http"
    ],
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/sweeps": {
            "get": {
                "description": "Get paginated list of all sweeps with filtering, sorting, count and pagination info",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sweeps"
                ],
                "summary": "Get all sweeps",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 50,
                        "description": "Number of results to return",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 0,
                        "description": "Number of results to skip",
                        "name": "offset",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by market slug (partial match)",
                        "name": "market_slug",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by market question (partial match)",
                        "name": "market_question",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by market type",
                        "name": "market_type",
                        "in": "query"
                    },
                    {
                        "enum": [
                            "created_at",
                            "post_order_value"
                        ],
                        "type": "string",
                        "default": "created_at",
                        "description": "Sort by field",
                        "name": "sort_field",
                        "in": "query"
                    },
                    {
                        "enum": [
                            "asc",
                            "desc"
                        ],
                        "type": "string",
                        "default": "desc",
                        "description": "Sort direction",
                        "name": "sort_direction",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated sweeps response",
                        "schema": {
                            "$ref": "#/definitions/backend.PaginationResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/backend.APIResponse"
                        }
                    }
                }
            }
        },
        "/sweeps/aggregated": {
            "get": {
                "description": "Get aggregated sweep statistics for different time periods with optional market type filtering",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sweeps"
                ],
                "summary": "Get aggregated sweep data",
                "parameters": [
                    {
                        "enum": [
                            "1d",
                            "3d",
                            "7d",
                            "1m",
                            "all"
                        ],
                        "type": "string",
                        "default": "all",
                        "description": "Time period for aggregation",
                        "name": "period",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Filter by market type",
                        "name": "market_type",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Aggregated sweep data",
                        "schema": {
                            "$ref": "#/definitions/backend.SweepAggregatedData"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "$ref": "#/definitions/backend.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/backend.APIResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "backend.APIResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "backend.PaginationResponse": {
            "type": "object",
            "properties": {
                "data": {},
                "hasMore": {
                    "type": "boolean"
                },
                "limit": {
                    "type": "integer"
                },
                "offset": {
                    "type": "integer"
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "backend.SweepAggregatedData": {
            "type": "object",
            "properties": {
                "end_time": {
                    "type": "string"
                },
                "failed_sweeps": {
                    "type": "integer"
                },
                "period": {
                    "type": "string"
                },
                "start_time": {
                    "type": "string"
                },
                "success_rate": {
                    "type": "number"
                },
                "successful_sweeps": {
                    "type": "integer"
                },
                "total_big_odd_ask_value": {
                    "type": "number"
                },
                "total_post_order_value": {
                    "type": "number"
                },
                "total_sweeps": {
                    "type": "integer"
                }
            }
        }
    }
}